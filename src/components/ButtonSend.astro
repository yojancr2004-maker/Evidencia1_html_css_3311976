---
interface Props {
        etiqueta: string
    }

    const  etiqueta  = Astro.props.etiqueta;
---
<button class="boton-envio">
    {etiqueta}
</button>
<style>
    /*Estilos de clase
      solo se aplica a los elementos que tenga
      el atributo class
      el nombre del atributo debe corresponder
      con el mismo nombre de clase
    */
    .boton-envio{
        background-color: black;
        color: aliceblue;
        width: 100px;
        height: 20px;
        border-radius: 30px ;
       margin:50px 100px 20px 200px;
       height: 30px;
    }
</style>